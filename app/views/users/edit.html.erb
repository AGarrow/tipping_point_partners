<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
		<h2>
			<%= Company.find(@user.company_id).name %>
		</h2>
	</section>
</div>
<% provide(:title, @user.name) %>
<%= form_for @user do |u| %>
<%= u.label :name %>
<%= u.text_field :name %>

<%= u.label :email %>
<%= u.text_field :email %>


<%= u.label :company_id %>
<%= u.collection_select :company_id, Company.all, :id, :name, {:include_blank => true}%>

<%= u.label :phone %>
<%= u.text_field :phone %>

<%= link_to "reset password" ,new_password_reset_path %>
<div class="actions"><%= u.submit "update user" %></div>


<% end %>

