<div class="container well">
<table class="table table-bordered table-striped table-condensed">
	<h2><%= company.name %></h2>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
	<% if current_user.is? "admin" %>
		<th>Role</th>
	<% end %>
  </tr>
	<% company.users.each do |employee|  %>
  		<tr>
		    <td><%= employee.name %></td>
		    <td><%= employee.email %></td>
			<td><%= employee.phone %></td>
			<td><%= employee.role %></td>
			<% if can? :manage, company %>
				<td>					
					<%=collection_select employee, :role, User::ROLES, :to_s, :humanize, {:selected => employee.role} %>
				</td>
			<% end %>
	    </tr>
	<% end %>

</table>
</div>