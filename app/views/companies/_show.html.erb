<% company ||= @company %>
<% provide(:title,'Companies') %>
<div class="container well text-align: center">
<table class="table table-bordered table-striped table-condensed">

	<div class = "row">
		<div class="span2 pull-left">
			<% unless company.avatar_file_name.nil? %>
				<%= image_tag company.avatar.url(:thumb) %>	
			<% end %>
		</div>
		<div class="span4 <% if company.avatar_file_name.nil? %>offset4<%else%>offset2<% end %>">
			<h2>
				<%= company.name %>
			</h2>
		</div>
		
		<div class="span2 pull-right">
			<% if can? :manage, company %>
			<button class="btn"><%= link_to "edit", edit_company_path(company) %></button>
			<% end %>
		</div>

	</div>
	<div class="container">
		<p><%= company.blurb %></p>
	</div>		
	
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
	<% if can? :manage, company %>
		<th>Role</th>
	<% end %>
	
	
	
  </tr>
	<% company.users.each do |employee|  %>
  		<tr>
			<% if has_avatar?(employee)  %>
		    <td><%= name(employee) %><%= gravatar_for employee %></td>
			<% end %>
		    <td><%= employee.email %></td>
			<td><%= employee.phone %></td>
			<% if can? :manage, company %>
				<td class="inline">					
					<%=collection_select employee, :role, User::ROLES, :to_s, :humanize, {:selected => employee.role} %>
				</td>
				<td>
						<%= button_to "remove",:action => "destroy" %>
				</td>
				
			<% end %>
	    </tr>
	<% end %>

</table>
</div>